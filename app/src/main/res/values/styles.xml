<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Train Themed Button -->
    <style name="AppTheme.ARLButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/ARLRed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.BTSButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/SilomGreen</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MRTButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/MRTBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBarExpandedCustom" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowRadius">30</item>
        <!--hide the text for now-->

    </style>

</resources>
